<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$(SolutionDir)Common.targets"/>
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <AssemblyName>tap</AssemblyName>
    <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
  </PropertyGroup>
  
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  
  <ItemGroup Condition="'$(Configuration)'=='NetCoreDebug'">
    <None Include="$(SolutionDir)/Shared/tap.runtimeconfig.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
<ItemGroup Condition="'$(Configuration)'=='NetCore'">
    <None Include="$(SolutionDir)/Shared/tap.runtimeconfig.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="RemoveDepsJson" AfterTargets="Publish">
    <Exec Command="rm $(PublishDir)tap.deps.json" />
    <Exec Command="rm $(PublishDir)tap.runtimeconfig.json" />
    <Exec Command="rm $(PublishDir)tap.dll.config" />
  </Target>
</Project>
